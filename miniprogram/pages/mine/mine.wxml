<!--index.wxml-->
<view class="container">
    <view class="userinfo">
        <block wx:if="{{!hasUserInfo}}">
            <image class='user-icon-img' src='../../images/people.png'/>
            <button class="user-icon-button" open-type="getUserInfo" bindgetuserinfo="getUserInfo" hover-class="none">
            </button>
            <view class="userinfo-nickname">路人甲</view>
        </block>


        <block wx:else>
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>
    </view>
    <view class="desc">
        <text class="user-motto">{{desc}}</text>
    </view>
    <view class="version">
        <text class="version">{{version}}</text>
    </view>
</view>
