/* pages/userConsole/userConsole.wxss */
@import "../../style/guide.wxss";

.motto-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: scroll;
}

.addtag {
    position: fixed;
    bottom: 15rpx;
    right: 35rpx;
}

.no-more-data {
    position: fixed;
    bottom: 50%;
    font-size: 24rpx;
}

.motto-card {
    width: 90%;
    background: #ff9d8d;
    border: 1px solid #5d1049;
    box-shadow: 0 0 2rpx 0 rgba(0, 0, 0, 0.14), 0 2rpx 2rpx 0 rgba(0, 0, 0, 0.12), 0 1rpx 3rpx 0 rgba(0, 0, 0, 0.20);
    border-radius: 4px;
    margin-top: 15rpx;
    padding: 13rpx;
    color: #4a4a4a;
    font-family: "monospace"
}
