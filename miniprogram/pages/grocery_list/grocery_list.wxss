/* miniprogram/pages/grocery_list/grocery_list.wxss */
page{
    height: 100%;
}
.container {
    background: #f5f5f5;
    height: 100%;
}

.questions-list {
    width: 90%;
    padding: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.question-item-card {
    margin-top: 15rpx;
    width: 100%;
    background: #ffffff;
    opacity: 0.83;
    border-radius: 5rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    padding: 25rpx;
    flex-shrink: 0;
}

.question-item-card-writer {
    color: #F6A623;
    font-size: 20rpx;
    font-style: italic;
    font-weight: bold;
    align-self: start;
}

.question-item-card-reply {
    color: #5D1049;
    font-size: 25rpx;
}

.question-item-card-content {
    margin-top: 15rpx;
    color: #4a4a4a;
    font-size: 24rpx;
    align-self: start;
}

.question-item-card-time {

    color: #9b9b9b;
    font-size: 28rpx;
}

.question-item-card-gender {

    color: #9b1712;
    font-size: 28rpx;
}

.question-item-card-nick {

    color: #9b9b9b;
    font-size: 28rpx;
}

.add-question {
    position: fixed;
    bottom: 15rpx;
    right: 35rpx;
}

.question-item-card-user-info {
    width: 100%;
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
}

.question-item-card-divider {
    width: 100%;
    height: 1rpx;
    background-color: #f5f5f5;
}

.question-item-card-icon {
    width: 80rpx;
    height: 80rpx;
    margin: 10rpx;
    border-radius: 50%;
}


.question-item-card-answer {
    width: 90%;
    margin-top: 15rpx;
    background: #f5f5f5;
    border-radius: 5rpx;
    display: flex;
    font-size: 24rpx;
    flex-direction: column;
    padding: 25rpx;
}
.question-item-card-answer-has-found{
    color: #44bb00;
}
.question-item-card-answer-not-found{
    color: #9b1712;
}

