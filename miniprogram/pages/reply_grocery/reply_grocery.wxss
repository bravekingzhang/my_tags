page {
    height: 100%;
}

.container {
    background-color: #f5f5f5;
    height: 100%;
}

.question-item-card-time {

    color: #9b9b9b;
    font-size: 28rpx;
    margin-right: 25rpx;
}

.question-item-card-gender {

    color: #9b1712;
    font-size: 28rpx;
}

.question-item-card-nick {

    color: #9b9b9b;
    font-size: 28rpx;
}

.add-question {
    position: fixed;
    bottom: 15rpx;
    right: 35rpx;
}

.reply-grocery-user-info{
    background-color: white;
    width: 100%;
    margin-top: 25rpx;
    padding: 15rpx;
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
}

.question-item-card-icon {
    width: 80rpx;
    height: 80rpx;
    margin-left: 25rpx;
    border-radius: 50%;
}

.question-item-card-content {
    background-color: white;
    padding: 25rpx;
    width: 100%;
    margin-top: 15rpx;
    color: #4a4a4a;
    font-size: 24rpx;
    margin-bottom: 50rpx;
}
.question-item-card-content-text{
    margin-left: 25rpx;
}
.reply-grocery-panel{
    width: 100%;
}
